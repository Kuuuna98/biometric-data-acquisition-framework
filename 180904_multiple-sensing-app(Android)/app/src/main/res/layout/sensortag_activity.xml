<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:clickable="false"
    android:gravity="bottom"
    android:longClickable="false"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.kaist.iclab.activity.SensorTagListActivity">

    <ListView
        android:id="@+id/device_listview"
        style="@style/devlistStyle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:choiceMode="singleChoice"
        android:padding="3dp"/>

    <Button
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_refresh"
        android:fadingEdge="vertical"
        android:gravity="center_horizontal|center"
        android:linksClickable="false"
        android:padding="10dp"
        android:text="@string/button_scan"/>

    <ListView
        android:id="@+id/connected_device_listview"
        style="@style/devlistStyle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:choiceMode="singleChoice"
        android:padding="3dp"/>

    <Button
        android:id="@+id/show_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="vertical"
        android:gravity="center_horizontal|center"
        android:linksClickable="false"
        android:padding="10dp"
        android:text="Sensing Start"
        android:drawableLeft="@android:drawable/ic_menu_slideshow"/>
</LinearLayout>
